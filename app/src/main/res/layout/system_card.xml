<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view = "http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/systems_card_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="@dimen/card_margin"
        android:elevation="3dp"
        card_view:cardCornerRadius="@dimen/card_radius">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_margin="@dimen/card_margin"
                android:id="@+id/systems_thumbnail"
                android:layout_width="match_parent"
                android:layout_height="@dimen/card_height"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:scaleType="fitXY"/>

            <TextView
                android:id="@+id/system_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/systems_thumbnail"
                android:paddingLeft="@dimen/card_title_padding"
                android:paddingRight="@dimen/card_title_padding"
                android:textAlignment="center"
                android:paddingTop="@dimen/card_title_padding"
                android:textColor="@color/card_title"
                android:textSize="@dimen/card_title" />
        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>